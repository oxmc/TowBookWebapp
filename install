#!/bin/bash

echo "Installing Discord..."
cd $HOME
git clone https://github.com/oxmc/disweb
cd disweb
sudo apt install -y unzip
sudo unzip $HOME/disweb/Discord.zip -d /usr/share
sudo echo "[Desktop Entry]
Name=Discord for raspberry pi's
Exec=/usr/share/Discord/Discord-webapp
Icon=/usr/share/Discord/resources/app/src/icons/app.png
Terminal=false
GenericName=Internet Messenger
Type=Application
StartupNotify=true
Categories=Network;InstantMessaging;Utility;
Encoding=UTF-8" > /usr/share/applications/Discord.desktop
echo "Discord is now installed!"
cd $HOME
rm -rf disweb
echo "You can find Discord in Menu > Accessories > Discord for raspbery pi's."
